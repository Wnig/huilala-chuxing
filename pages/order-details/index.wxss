.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  z-index: 999;
}
.header-cons {
  position: relative;  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.header .back {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28rpx;
  margin: auto;
  width: 22px;
  height: 22px;
}
.header text {
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}
.header_ {
  height: 44px;
}

.content {
  padding: 20rpx 20rpx 120rpx 20rpx;
}
.car-info {
  position: relative;
  margin-bottom: 20rpx;
  padding: 44rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}

.car-info .label {
  position: absolute;
  right: 0;
  top: 14rpx;
  padding: 8rpx 10rpx 8rpx 18rpx;
  border-radius: 100px 0 0 100px;
  background: #525252;
  box-shadow: 0 2px 4px 0 rgba(125,125,125,0.35);
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 12px;
}
.car-info .finish {
  background: #FF9A00;
  box-shadow: 0 2px 4px 0 rgba(209,150,150,0.35);
}

.car-info .part1 {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
} 
.car-info .part1 view {
  margin-right: 22rpx;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  line-height: 16px;
} 
.car-info .part1 text {
  padding: 5rpx 15rpx;
  font-family: PingFangSC-Regular;
  font-size: 10px;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 12px;
  background: rgba(253,145,5,0.5);
  border-radius: 100px;
} 

.car-info .item {
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
}
.car-info .item-last {
  margin-bottom: 0;
}
.car-info .part2 image, .car-info .part3 image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.car-info .part2 text, .car-info .part3 text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: -0.34px;
  line-height: 14px;
}

.car-info .dot {
  width: 14rpx;
  height: 14rpx;
  margin-right: 26rpx;
  margin-left: 10rpx;
  border-radius: 50%;
}
.car-info .green {
  position: relative;
  background: #39c67d;
}
.car-info .green::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: -32rpx;
  margin: auto;
  width: 2rpx;
  height: 28rpx;
  background: #D8D8D8;
}
.car-info .yellow {
  background: #ff9b41;
}

.remark {
  display: flex;
  align-items: center;
  height: 120rpx;
  margin-bottom: 20rpx;
  padding-left: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}
.remark image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.remark input {
  flex: 1;
  outline: none;
  border: none;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}

.fee-con {
  padding: 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}
.fee-con .part1 {
  display: flex;
  align-items: center;
  margin-bottom: 90rpx;
}
.fee-con .tit {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  line-height: 14px;
}
.fee-con .total {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  line-height: 14px;
}
.fee-con .total text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FD9105;
  line-height: 14px;
}
.fee-con .part2 {

}
.fee-con .part2 .item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.fee-con .part2 .left {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0,0,0,0.4);
  line-height: 14px;
}
.fee-con .part2 .right {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0,0,0,0.4);
  line-height: 14px;
}
.fee-con .part2 .yellow {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FD9105;
  line-height: 14px;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #FFFFFF;
  text-align: center;
  line-height: 14px;
  z-index: 9999;
}
.btn-yellow {
  background-image: linear-gradient(-90deg, #FFA900 0%, #FF8000 96%);
}