
page {
  height: 100%;
}
.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  z-index: 9999;
}
.header-cons {
  position: relative;  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.header .back {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28rpx;
  margin: auto;
  width: 22px;
  height: 22px;
}
.header text {
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}
.header_ {
  height: 44px;
}

.content {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 480rpx;
  background: #FFFFFF;
}
.content .part1 {
  display: flex;
  justify-items: center;
  align-items: center;
}
.content .part1 image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto 36rpx;
}
.content .part2 {
  margin-bottom: 28rpx;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  letter-spacing: -0.39px;
  text-align: center;
  line-height: 16px;  
}
.content .part3 {
  margin-bottom: 72rpx;
  opacity: 0.3;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 16px;
}
.content .part4 {
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .part4 .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 252rpx;
  height: 80rpx;
  margin: 0 43rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FD9105;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
  border: 1px solid #FD9105;
  border-radius: 4px;
}
.content .part4 .btn-yellow {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;
  background-image: linear-gradient(-90deg, #FFA900 0%, #FF8000 98%);
  border-radius: 4px;
}