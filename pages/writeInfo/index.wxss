page {
  height: 100%;
}
.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  z-index: 9999;
}
.header-cons {
  position: relative;  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.header .back {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28rpx;
  margin: auto;
  width: 22px;
  height: 22px;
}
.header text {
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}
.header_ {
  height: 44px;
}

.content {
  padding: 20rpx;
}
.content .info .part1  {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  line-height: 16px;
}
.content .info .part1 text {
  margin-right: 24rpx;
}
.content .info .part2 {
  width: 100%;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0,0,0,0.3);
  letter-spacing: 0;
  line-height: 14px;
}
.content .info {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-bottom: 20rpx;
  padding: 30rpx 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}
.info .next {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 70rpx;
  height: 70rpx;
}
.info .choice-info {
  display: flex;
  width: 100%;
  text-align: left;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #5B91F8;
  letter-spacing: 0;
  line-height: 16px;
}

.remark {
  display: flex;
  align-items: center;
  height: 120rpx;
  margin-bottom: 20rpx;
  padding-left: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}
.remark image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.remark input {
  flex: 1;
  outline: none;
  border: none;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}

.explain {
  padding: 28rpx 40rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}

.tit {
  display: flex;
  align-items: center;
  margin-bottom: 34rpx;
  opacity: 0.6;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}
.tit image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 16rpx;
}
.cont .item {
  display: flex;
  margin-bottom: 20rpx;
}
.cont .item .dot {
  width: 10rpx;
  height: 10rpx;
  margin-top: 10rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  background: #666666;
}
.cont .item .p {
  width: 95%;
  opacity: 0.6;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 20px;
}


.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  z-index: 9999;
  background: #FFFFFF;
}
.footer .left {
  flex: 1;
  padding-left: 24rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: rgba(0,0,0,0.3);
  letter-spacing: 0;
  line-height: 22px;   
}
.footer .left .part1 {
  display: flex;
}
.footer .left text {
  font-family: PingFangSC-Regular;
  letter-spacing: 0;
  line-height: 22px;
  color: rgba(253,145,5,1);
}
.footer .left .yu {
  flex: 1;
}
.footer .left .s {
  font-size: 14px;
}
.footer .left .b {
  font-size: 20px;
}
.footer .left .fees {
  display: flex;
  align-items: center;
  padding-right: 42rpx;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: 0;
  line-height: 12px;
}
.footer .left image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

.footer .right {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 300rpx;
  height: 100%;
  background-image: linear-gradient(-90deg, #FFA900 0%, #FF8000 98%);
  box-shadow: 0 5px 7px 0 rgba(0,0,0,0.15);  
}
.footer .right text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  background: rgba(0, 0, 0, 0.6);
}
.mask .fees-con {
  position: absolute;
  left: 0;
  bottom: 120rpx;
  width: 100%;
  background: #FFFFFF;
}
.mask .head {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-bottom: 80rpx;
}
.mask .head .text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #999999;
  line-height: 14px;
}
.mask .head .icon-gb {
  position:absolute;
  right:0;
  top:0;
  padding: 36rpx;
  font-size:24rpx;
  color:#666;  
}
.mask .cons {
  width: auto;
  max-height: 400rpx;
  padding-left: 80rpx;
}
.mask .cons .item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.mask .cons .item .num {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.4);
  line-height: 14px;
}
.mask .cons .item .money {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FD9105;
  line-height: 14px;  
  text-align: center;
}
.mask .cons .item .money-rg {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.4);
  line-height: 14px;
}