page {
  height: 100%;
}
.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  z-index: 9999;
}
.header-cons {
  position: relative;  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.header .back {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28rpx;
  margin: auto;
  width: 22px;
  height: 22px;
}
.header text {
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}
.header_ {
  height: 44px;
}

.content {
  padding: 20rpx;
}
.info-con {
  margin-bottom: 100rpx;
  padding: 0 20rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,0.04);
  border-radius: 4px;
}
.item {
  display: flex;
  align-items: center;
  height: 104rpx;
  padding-left: 10rpx;
}
.item text {
  width: 224rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}
.item input {
  flex: 1;
  outline: none;
  border: none;
  background: transparent;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 88rpx;
  margin-bottom: 40rpx;
  background: #FFFFFF;
  box-shadow: 0 5px 7px 0 rgba(0,0,0,0.15);
  border-radius: 100px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
}
.btn-yellow {
  background-image: linear-gradient(-90deg, #FFA900 0%, #FF8000 98%);
  box-shadow: 0 5px 7px 0 rgba(0,0,0,0.15);
  border-radius: 100px;  
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #FFFFFF;
  letter-spacing: 0;
}
