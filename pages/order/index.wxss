.header {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
  background: #FFFFFF;
  z-index: 9999;
}
.header-cons {
  position: relative;  
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}
.header text {
  font-family: PingFangSC-Semibold;
  font-size: 18px;
  color: #000000;
  letter-spacing: 0;
  text-align: center;
  line-height: 17px;
}
.header .back {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 28rpx;
  margin: auto;
  width: 22px;
  height: 22px;
}
.header_ {
  height: 105px;
}

.menu {
  position: fixed;
  top: 0;
  width: 100%;
  background: #FFF;
  box-shadow: 0 0 10px rgba(0,0,0,0.15);
  z-index: 1;
}

.menu > .main {
  display: flex;
  align-items: center;
}

.menu > .main > .item {
  position: relative;
  flex: 1;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #575757;
  line-height: 44px;
}
.menu > .main > .item text {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  width: 36rpx;
  height: 26rpx;
  border: 1px solid #FFA816;
  border-radius: 100px;
  color: #FFA816;
  line-height: 26rpx;
  font-size: 9px;
  font-family: 'PingFangSC-Regular';
  background: #fff;
}

.menu > .main > .select {
  color: #FD9105;
}

.menu > .bot-line-container > .slide-wrapper {
  width: 20%;
  padding: 0 28rpx;
  box-sizing: border-box;
  margin-left: 0%;
  transition: 0.3s;
}

.menu > .bot-line-container > .slide-wrapper > .slide {
  height: 2px;
  background: #FD9105;
}

/* 订单列表 */
.order-item {
  margin-bottom: 20rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-shadow: 5px 5px 20px 0 rgba(132,133,133,0.15);
}
.part1 {
  display: flex;
  align-items: center;
  height: 76rpx;
  padding: 0 18rpx;
}
.part1 view {
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  letter-spacing: 0;
  line-height: 16px;
}
.part1 text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: 0;
  line-height: 12px;
}
.part1 .yellow {
  color: #FD9105;
}
.part2 {
  display: flex;
  align-items: center;
  height: 200rpx;
}
.part2 .left {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin: 0 40rpx 0 20rpx;
}
.part2 .left image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 12rpx;
  border-radius: 50%;
}
.part2 .left text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  letter-spacing: 0;
  line-height: 12px;
}
.part2 .right {
  flex: 1;
}
.part2 .right image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.part2 .right .item {
  display: flex;
  margin-bottom: 22rpx;
}
.part2 .right .item .name {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #222333;
  letter-spacing: 0;
  line-height: 12px;
}
.part2 .right .item .phone {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #222333;
  letter-spacing: 0;
  line-height: 12px;
}

.part2 .right .item-last {
  margin-bottom: 0;
}
.part2 .right .item .money {
  flex: 1;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #000000;
  letter-spacing: 0;
  line-height: 14px;
}
.part2 .right .item text {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #000000;
  letter-spacing: 0;
  line-height: 12px;
}

.part3 {
  display: flex;
  align-items: center;
  height: 104rpx;
}
.part3 .view {
  flex: 1;
}
.part3 .btn {
  display: flex;
  justify-items: center;
  align-items: center;
  height: 68rpx;
  margin-left: 20rpx;
  padding: 0 30rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  letter-spacing: 0;
  line-height: 14px;
  border: 1px solid #00000026;
  box-shadow: 0 5px 7px 0 rgba(0,0,0,0.15);
  border-radius: 100px;
}

.no {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 704rpx;
}
.no .nodata {
  width: 386rpx;
  height: 222rpx;
  margin-bottom: 40rpx;
}
.no text {
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #000000;
  letter-spacing: -0.34px;
  text-align: center;
  line-height: 14px;  
}

.no-more {
    display: flex;
    align-items: center;
    padding: 0 80rpx;
    height: 100rpx;
}

.no-more > .line {
    flex: 1;
    height: 0.5px;
}

.no-more > .text {
    margin: 0 40rpx;
    font-size: 28rpx;
    color: rgb(129, 129, 129);
}

/* =================================== */
.is-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
}

.is-loading > .icon {
    font-size: 32rpx;
    color: #9B9B9B;
    animation:myfirst 1.3s linear infinite;
}

.is-loading > .text {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #9B9B9B;
}

@keyframes myfirst
{
0%   {transform: rotate(0deg)}
50%  {transform: rotate(180deg)}
100% {transform: rotate(360deg)}
}